<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <EditText
        android:id="@+id/editText_body"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="12dp"
        android:layout_weight="1"
        android:background="@android:color/holo_orange_light"
        android:gravity="top"
        android:hint="Input Mraid HTML, JSON, or JSON URL"
        android:padding="12dp"
        android:textColorHint="@android:color/holo_blue_dark" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RadioGroup
            android:id="@+id/radioGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/radiobutton_mraid_html"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mraid HTML" />

            <RadioButton
                android:id="@+id/radiobutton_bidresponse"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bid Response JSON" />

            <RadioButton
                android:id="@+id/radiobutton_bidresponse_url"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bid Response JSON URL" />
        </RadioGroup>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <Button
            android:id="@+id/banner_load"
            android:layout_width="0dp"
            android:layout_height="@dimen/button_height"
            android:layout_weight="1"
            android:text="Load Banner" />

        <Button
            android:id="@+id/clear_content"
            android:layout_width="150dp"
            android:layout_height="@dimen/button_height"
            android:text="Clear Content" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="50dp">

        <LinearLayout
            android:id="@+id/layout_banner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="#dddddd"
            android:gravity="center"
            android:orientation="horizontal" />

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerInParent="true"
            android:visibility="gone" />
    </RelativeLayout>
</LinearLayout>